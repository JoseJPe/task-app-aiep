<div class="row">
    {{#each tasks}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center text-info" >
                    {{title}} <a href="/tasks/edit/{{_id}}"><i class="fa fa-pencil"></i></a>
                </h4>
                <h3 class="card-title d-flex justify-content-between align-items-center" >
                    {{date}}
                </h3>
                <p>{{ description }}</p>

                <form action="/tasks/delete/{{_id}}?_method=DELETE" method ="POST" class="d-grid gap-2 mx-auto">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>

    {{/each}}
</div>