<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>New Task</h3>
        </div>
        <div class="card-body">
            <form action="/tasks/new-task" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control mb-3" autofocus>
                </div>
                <div class="form-group">
                    <input type="date" id="start" name="date" value="2021-05-01" min="2021-05-01"
                        max="2021-12-31" >
                </div>
                <div class="form-group">
                    <textarea name="description" placeholder="Descripion" class="form-control mb-3" max-heigth="300px"
                        rows="6"></textarea>
                </div>
                <div class="form-group d-grid gap-2">
                    <button class="btn btn-primary btn-block">SAVE</button>
                </div>
            </form>

        </div>
    </div>
</div>